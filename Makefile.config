#=========================================================================
# GLV makefile configuration
#=========================================================================

#=========================================================================
# Uncomment your system -or- use command-line argument PLATFORM='platform'
#=========================================================================
PLATFORM = macosx
#PLATFORM = linux

# Uncomment your window binding
#BINDING_NONE = 1
BINDING_GLUT = 1

#=========================================================================
# Customize to fit your system
#=========================================================================
PREFIX = /usr/local
CONFPREFIX = $(PREFIX)/etc
MANPREFIX = $(PREFIX)/share/man
LIBS = -L$(PREFIX)/lib -L/usr/lib
CFLAGS = -O3 -I. -I./include -I$(PREFIX)/include -I/usr/include
LFLAGS = $(LIBS)
AR = ar cr
CC = g++
RANLIB = ranlib

#=========================================================================
# DO NOT EDIT BELOW!
#=========================================================================
BINDING_SRC = 

ifeq ($(PLATFORM), linux)
	LFLAGS += -lGLEW -lglut -lGLU -lGL
	CFLAGS += -DLINUX
endif
ifeq ($(PLATFORM), macosx)
	LFLAGS += -framework GLUT -framework AGL -framework OpenGL
endif

ifdef BINDING_GLUT
	BINDING_SRC = glv_binding_glut.cpp
endif

