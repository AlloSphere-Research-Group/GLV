import os ;

path-constant BOOST_ROOT : [ os.environ BOOST_ROOT ] ;
path-constant TOP : .. ;

# boost-build $(BOOST_ROOT)/tools/build/v2 ;

use-project boost
   : $(BOOST_ROOT)
   ;
   
project glv
   : build-dir bin.v2
   : usage-requirements
        <include>$(TOP)/include
    : requirements
        <include>$(TOP)/include
   ;